<div class="all-nav-links row">
    <div class="logo col-lg-8 col-md-8 col-sm-7 col-xs-12">
      <a id="home-link" href="/"><img src="../imgs/makinghunger-large.png"></a>
    </div>

    <% if current_user %>

    <div class="user-links col-lg-4 col-md-4 col-sm-5 col-xs-12">
      <a class="all-links" id="profile-link" href="/users/<%= current_user.id %>"><%= current_user.username %></a><span> | </span>
      <a class="all-links" id="logout-link" href="/logout">Logout</a>

        <form class="form-inline" type='get' action="/search">
          <div class="form-group">
            <input type='hidden' name='@first' value="0">
            <input type='hidden' name='@last' value="12">

            <input class="form-control search" type='text' name='q' placeholder="search for recipes">
            <input class="btn btn-default" type='submit' value='search'>
          </div>
        </form>

    </div>

      <% else %>

    <div class="user-links not-logged-in col-lg-4 col-md-4 col-sm-5 col-xs-12">
      <a class="all-links" id="login-link" href="/users/login">Login</a><span> | </span>
      <a class="all-links" id="register-link" href="/users/new">Register</a>
        <form class="form-inline" type='get' action="/search">
          <div class="form-group">
            <input type='hidden' name='@first' value="0">
            <input type='hidden' name='@last' value="12">

            <input class="form-control search" type='text' name='q' placeholder="search for recipes">
            <input class="btn btn-default" type='submit' value='search'>
          </div>
        </form>
    </div>

  <% end %>

</div>
