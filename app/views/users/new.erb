<div class="register-form-container card">
  <h1 class="form-heading">Create Account</h1>
  <% if @errors %>
    <span>Oops! Something went wrong:</span>
    <ul class="error-list no-bullets">
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

    <form method="post" action="/users">
      <input type="hidden" name="_method" value"post">

      <fieldset class="form-group">
        <label class="sr-only" for="username">Username:</label>
        <input id="username" class="form-control" name="user[username]" type="text" value="<%= @user.username %>" placeholder="username">
      </fieldset>

      <fieldset class="form-group">
        <label class="sr-only" for="email">E-mail:</label>
        <input id="email" class="form-control" name="user[email]" type="text" value="<%= @user.email %>" placeholder="email">
      </fieldset>

      <fieldset class="form-group">
        <label class="sr-only" for="password_hash">Password:</label>
        <input id="password_hash" class="form-control" name="user[password]" type="password"  placeholder="password">
      </fieldset>

      <input type="submit" class="btn btn-default" value="Sign Up">

    </form>

</div>
