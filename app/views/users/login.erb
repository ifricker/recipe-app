<div class="login-form-container card">
  <h1 class="form-heading">Login</h1>
  <hr>
  <% if @error %>
    <span>Oops! Something went wrong:</span>
    <ul class="error-list no-bullets">
     <li><%= @error %></li>
    </ul>
  <% end %>

  <form method="post" action="/users/login">
    <fieldset class="form-group">
      <input type="hidden" name="_method" value="post">
      <label class="sr-only" for="email">E-mail:</label>
      <input class="form-control" id="email" name="user[email]" type="text" value="<%= @user.email %>" placeholder="username">
    </fieldset>
    <fieldset class="form-group">
      <label class="sr-only" for="password_hash">Password:</label>
      <input class="form-control" id="password_hash" name="user[password]" placeholder="Password" type="password">
    </fieldset>

    <input type="submit" class="btn btn-default" value="Login">
  </form>
</div>
